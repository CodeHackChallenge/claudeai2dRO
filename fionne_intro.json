        "type": "QUEST_OFFER",
        "speaker": "Fionne",
        "text": "The goblins have been causing trouble. Could you help us by defeating 5 of them?",
        "questId": "goblin_slayer",
        "choices": [
          {"text": "I'll do it!", "targetNode": "accept"},
          {"text": "Maybe later.", "targetNode": "decline"}
        ]
