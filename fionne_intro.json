      },
      {
        "id": "complete",
        "type": "DIALOGUE",
        "speaker": "Fionne",
        "text": "Amazing work! The village is safer thanks to you. Here's your reward.",
        "nextNode": "end"
      },
      {
        "id": "decline",
        "type": "DIALOGUE",
